<?import javafx.geometry.*?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center"  hgap="10" vgap="10">
    <VBox GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1">
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
        </padding>
        <HBox alignment="CENTER_LEFT">
            <VBox.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </VBox.margin>
            <Label text="Aranan:" textAlignment="CENTER">
                <HBox.margin>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                </HBox.margin>
            </Label>
            <TextField id="tbAranan" fx:id="tbAranan" maxHeight="1.7976931348623157E308" onKeyReleased="#tbArananKeyReleased"
                       maxWidth="1.7976931348623157E308" prefWidth="370.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                </HBox.margin>
            </TextField>
            <ComboBox id="cmbAlan" fx:id="cmbAlan" maxHeight="1.7976931348623157E308" onAction="#cmbAlanOnAction"
                      maxWidth="1.7976931348623157E308" prefWidth="200.0">
                <HBox.margin>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                </HBox.margin>
            </ComboBox>
        </HBox>
        <ListView fx:id="lbListe" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="6.0" left="6.0" right="6.0" top="6.0"/>
            </VBox.margin>
        </ListView>
    </VBox>
</GridPane>
